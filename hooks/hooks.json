{
  "hooks": {
    "Notification": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "name": "notify-permission",
            "type": "command",
            "command": "node ${extensionPath}/src/notify.js",
            "timeout": 5000
          }
        ]
      }
    ],
    "AfterAgent": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "name": "notify-finished",
            "type": "command",
            "command": "node ${extensionPath}/src/notify.js",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
